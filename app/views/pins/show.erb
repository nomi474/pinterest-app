<div class="header">
  <h1>
    <i class="fa fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h1>
</div>

<div class="show-pin">
  <p><%= "#{@pin.text}" %></p>

  <hr/>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
    <%= link_to "#{@pin.url}", "#{@pin.url}" , html_options = {target: "_blank", class: "url"} %>
  </p>
  <p>
  This pin has been repinned by.... 
  <% @users.each do |user| %>
    <%= user.first_name %>
  <% end %> 
</p>
  <p>
    <img src="<%= "#{@pin.image.url()}" %>"> <!-- :medium -->
  </p>
</div>
<br/>
<%= link_to repin_path(@pin), class: "btn btn-default", method: "post" do %>
  <!--<icon here?>-->
  Repin!
<% end %> 
<p>
<a href="/">
  <i class="fa fa-arrow-left"></i>
  Back to Home
</a>
</p>
